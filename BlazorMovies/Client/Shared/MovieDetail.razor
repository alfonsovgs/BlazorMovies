<div>
    <p>Title: <b>@Movie.Title</b> </p>
    <p>Publish Date: <b>@Movie.PublishDate.ToString("dd/MM/yyyy")</b> </p>

    @if (ShowButtons)
    {
        <div>
            <button @onclick="@(() => DeleteMovie.InvokeAsync(Movie))">Borrar</button>
        </div>
    }
</div>

@code {

    [Parameter]
    public Movie Movie { get; set; }
    
    [Parameter]
    public EventCallback<Movie> DeleteMovie { get; set; }

    [Parameter]
    public bool ShowButtons { get; set; }
}
